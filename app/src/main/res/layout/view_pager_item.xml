<?xml version="1.0" encoding="utf-8"?>
<com.sneha.viewpagerpagetransformaredemos.curlPageLib.PageCurlFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_PagerItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/txtTitle_PagerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="17sp" />


    </android.support.constraint.ConstraintLayout>

</com.sneha.viewpagerpagetransformaredemos.curlPageLib.PageCurlFrameLayout>
